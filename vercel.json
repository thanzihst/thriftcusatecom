{
    "version": 2,
    "builds": [
        {
            "src": "ecommerce/wsgi.py",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1",
            "headers": {
                "cache-control": "public, max-age=31536000, immutable"
            }
        },
        {
            "src": "/media/(.*)",
            "dest": "/media/$1"
        },
        {
            "src": "/(.*)",
            "dest": "ecommerce/wsgi.py"
        }
    ],
    "env": {
        "DJANGO_SETTINGS_MODULE": "ecommerce.settings_prod",
        "PYTHONPATH": ".",
        "DJANGO_ALLOWED_HOSTS": ".vercel.app"
    }
} 