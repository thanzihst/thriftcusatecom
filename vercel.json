{
    "version": 2,
    "builds": [
        {
            "src": "index.py",
            "use": "@vercel/python",
            "config": {
                "runtime": "python3.9",
                "maxLambdaSize": "15mb"
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/index.py"
        }
    ],
    "env": {
        "DJANGO_SETTINGS_MODULE": "ecommerce.settings_prod",
        "PYTHONPATH": ".",
        "DJANGO_ALLOWED_HOSTS": "*",
        "VERCEL_FORCE_NO_BUILD_CACHE": "1",
        "PYTHON_VERSION": "3.9"
    }
} 