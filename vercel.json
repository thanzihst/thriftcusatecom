{
    "version": 2,
    "builds": [
        {
            "src": "api/wsgi_handler.py",
            "use": "@vercel/python"
        },
        {
            "src": "build_files.sh",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "staticfiles"
            }
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/media/(.*)",
            "dest": "/media/$1"
        },
        {
            "src": "/(.*)",
            "dest": "api/wsgi_handler.py"
        }
    ],
    "env": {
        "DJANGO_SETTINGS_MODULE": "ecommerce.settings_prod",
        "PYTHONPATH": ".",
        "DJANGO_ALLOWED_HOSTS": ".vercel.app"
    }
} 